<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="extension_account_move_form" model="ir.ui.view">
          <field name="name">extension.account.move.form</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='journal_id']" position="after">
                  <field name="auth_date" attrs="{'required': [('move_type', '=', 'in_invoice')], 'invisible': ['|', ('state', '=', 'purchase'), ('move_type', '!=', 'in_invoice')]}"/>
                  <field name="sustento_id"  attrs="{'required': [('move_type', '=', 'in_invoice')],'invisible': ['|', ('state', '=', 'purchase'), ('move_type', '!=', 'in_invoice')]}"/>
              </xpath>
              <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                  <field name="l10n_latam_document_number" placeholder="N° de Documento" attrs="{'required': [('move_type', '=', 'in_invoice')], 'invisible': ['|', ('state', '=', 'purchase'), ('move_type', '!=', 'in_invoice')]}"/>
              </xpath>
              <xpath expr="//field[@name='l10n_latam_document_number']" position="after">
                  <field name="payment_info"/>
              </xpath>
              <xpath expr="//field[@name='payment_info']" position="after">
                  <field name="is_tax_havens"/>
              </xpath>
              <xpath expr="//field[@name='is_tax_havens']" position="after">
                  <field name="tax_heavens_id"/>
              </xpath>
          </field>
        </record>
        <record id="extension_account_move_tree" model="ir.ui.view">
          <field name="name">extension.account.move.tree</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_invoice_tree"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='name']" position="after">
                  <field name="l10n_latam_document_number"  attrs="{'invisible': ['|',('state', '=', 'purchase'), ('move_type', '!=', 'in_invoice')]}"/>
              </xpath>
          </field>
        </record>

         <record id="view_extension_account_move_search_tree_inherit" model="ir.ui.view">
               <field name="name">extension.account.move.search.tree</field>
               <field name="model">account.move</field>
               <field name="inherit_id" ref="account.view_account_invoice_filter"/>
               <field name="arch" type="xml">
                   <search>
                    <field name="l10n_latam_document_number"  string="N° Document"  context="{'default_document_id':'view_extension_account_move_search_tree_inherit'}"/>
                   </search>
               </field>
        </record>
    </data>
</odoo>


